        },
        "url": {
          "raw": "{{baseUrl}}/reservas/",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "reservas",
            ""
          ]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "if (pm.response.code === 201) {",
              "  var json = pm.response.json();",
              "  pm.environment.set('reservaId', json.id || json.pk || '');",
              "} else {",
              "  console.log('crear reserva falló', pm.response.code);",
              "}"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
